<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_browse"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_widthPercent="75%">

        <EditText
            android:id="@+id/sod_path"
            android:layout_width="0dp"
            android:layout_height="@dimen/bottom_text_padding"
            android:background="@drawable/frame_shape"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/sod_browse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/browse"
            android:padding="@dimen/status_bar"
            android:textColor="@android:color/white"
            android:layout_marginLeft="@dimen/bottom_text_padding"
            android:background="@drawable/btn_style_five_selector"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/ll_browse"
        android:gravity="center_horizontal"
        android:layout_marginTop="@dimen/bottom_text_padding"
        app:layout_widthPercent="75%">

        <Button
            android:id="@+id/sod_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/play"
            android:padding="@dimen/status_bar"
            android:textColor="@android:color/white"
            android:background="@drawable/btn_style_five_selector"/>

        <Button
            android:id="@+id/sod_stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/stop"
            android:padding="@dimen/status_bar"
            android:textColor="@android:color/white"
            android:layout_marginLeft="@dimen/bottom_text_padding"
            android:background="@drawable/btn_style_five_selector"/>

        <Button
            android:id="@+id/sod_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pause"
            android:padding="@dimen/status_bar"
            android:textColor="@android:color/white"
            android:layout_marginLeft="@dimen/bottom_text_padding"
            android:background="@drawable/btn_style_five_selector"/>

        <Button
            android:id="@+id/sod_goon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/goon"
            android:textColor="@android:color/white"
            android:padding="@dimen/status_bar"
            android:layout_marginLeft="@dimen/bottom_text_padding"
            android:background="@drawable/btn_style_five_selector"/>

    </LinearLayout>

</android.support.percent.PercentRelativeLayout>