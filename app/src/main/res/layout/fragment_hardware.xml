<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/frame_shape"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:text="@string/main_board"
            android:textColor="@android:color/black"
            android:layout_marginTop="@dimen/button_margin_bottom"
            android:textSize="@dimen/text_size"/>

        <TextView
            android:id="@+id/main_board_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/main_board_msg_text"
            android:layout_marginTop="@dimen/text_spacing"/>

        <TextView
            android:id="@+id/main_board_status"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/main_board_status"
            android:gravity="bottom|center_horizontal"
            android:textSize="@dimen/main_board_text_size"
            android:textColor="@android:color/black"
            android:layout_marginBottom="@dimen/button_margin_bottom"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/frame_shape"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:text="@string/printer"
            android:textColor="@android:color/black"
            android:layout_marginTop="@dimen/button_margin_bottom"
            android:textSize="@dimen/text_size"/>

        <TextView
            android:id="@+id/printer_hw_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:layout_gravity="center_horizontal"
            android:textSize="18sp"
            android:layout_marginTop="20dp"/>



    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/frame_shape"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:text="@string/ticket_reader"
            android:textColor="@android:color/black"
            android:layout_marginTop="@dimen/button_margin_bottom"
            android:textSize="@dimen/text_size"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/frame_shape"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textStyle="bold"
            android:text="@string/barcode_gun"
            android:textColor="@android:color/black"
            android:layout_marginTop="@dimen/button_margin_bottom"
            android:textSize="@dimen/text_size"/>

    </LinearLayout>

</LinearLayout>